<section class="text-center">
  <main class="form-signin">
    <form id="formRegistration" method="POST" action="/registration">
      <h1 class="h3 mb-3 fw-normal">Fill in the fields</h1>

      <div class="form-floating">
        <input type="text" class="form-control" id="regInputName" name="username" placeholder="name@example.com"
          autofocus required autocomplete="off">
        <label for="regInputName">Your name</label>
      </div>

      <div class="form-floating">
        <input type="email" class="form-control" id="regInputEmail" name="email" placeholder="name@example.com"
          required autocomplete="off">
        <label for="regInputEmail">Email address</label>
      </div>

      <div class="form-floating">
        <input type="password" class="form-control" id="regPassword" name="password" placeholder="Password"
          minlength="8" required>
        <label for="regPassword">Password</label>
      </div>

      <div class="form-floating">
        <input type="password" class="form-control" id="regConfirmPassword" placeholder="Confirm Password"
          minlength="8" required>
        <label for="regPassword">Confirm Password</label>
      </div>

      <div id="feedback" class="invalid-feedback"></div>

      <button class="w-100 btn btn-lg btn-success mt-1">Register now</button>
      <a href="/" class="w-100 btn btn-lg btn-outline-secondary mt-1">Back home</a>

    </form>

  </main>
</section>