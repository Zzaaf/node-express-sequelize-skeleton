{{>header}}

<main class="flex-shrink-0">
  <div class="container">
    <div class="card mt-5" style="width: 18rem;">
      <i class="bi bi-person-bounding-box profile-avatar"></i>
      <div class="card-body">
        <h5 class="card-title">User name: {{username}}</h5>
        <p class="card-text">Email: <a href="mailto:{{email}}" class="card-text">{{email}}</a></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Registration date: {{registration}}</li>
        <li class="list-group-item">Your IP: {{ip}}</li>
      </ul>
      <div class="card-body d-flex justify-content-around">
        <a href="/users/{{id}}" class="btn btn-primary">Edit profile</a>
        <button id="deleteBtn" type="button" data-url="/users/{{id}}" class="btn btn-danger">Delete profile</button>
      </div>
    </div>

    {{>footer}}
  </div>
</main>